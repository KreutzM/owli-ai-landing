---
import type { CollectionEntry } from "astro:content";
import type { SiteLang } from "../../lib/i18n";

interface Props {
  partner: CollectionEntry<"partners">;
  lang?: SiteLang;
}

const { partner, lang = "de" } = Astro.props;
const titleId = `partner-${partner.data.slug}-title`;
const initials = partner.data.name
  .split(" ")
  .filter(Boolean)
  .slice(0, 2)
  .map((part) => part[0]?.toUpperCase() ?? "")
  .join("");
const copy = {
  de: {
    officialSiteLabel: "Offizielle Seite",
    officialSiteAria: `Offizielle Seite von ${partner.data.name} (oeffnet in neuem Tab)`,
    category: {
      Hochschulpartner: "Hochschulpartner",
      Wirtschaftspartner: "Wirtschaftspartner"
    }
  },
  en: {
    officialSiteLabel: "Official website",
    officialSiteAria: `Official website of ${partner.data.name} (opens in a new tab)`,
    category: {
      Hochschulpartner: "University partner",
      Wirtschaftspartner: "Industry partner"
    }
  },
  es: {
    officialSiteLabel: "Sitio oficial",
    officialSiteAria: `Sitio oficial de ${partner.data.name} (se abre en una pestana nueva)`,
    category: {
      Hochschulpartner: "Socio universitario",
      Wirtschaftspartner: "Socio empresarial"
    }
  }
}[lang];
---

<article
  aria-labelledby={titleId}
  class="group flex h-full flex-col rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md"
>
  <div class="mb-4 flex items-start gap-4">
    <a
      href={partner.data.website}
      target="_blank"
      rel="noopener noreferrer"
      aria-label={copy.officialSiteAria}
      class="block shrink-0 rounded-xl"
    >
      {
        partner.data.logo ? (
          <img
            src={partner.data.logo}
            alt={partner.data.logoAlt || `Logo von ${partner.data.name}`}
            width="125"
            height="125"
            class="h-[104px] w-[104px] rounded-xl border border-slate-200 bg-white object-contain p-2 sm:h-[125px] sm:w-[125px]"
            loading="lazy"
            decoding="async"
          />
        ) : (
          <div
            class="flex h-[104px] w-[104px] items-center justify-center rounded-xl border border-slate-300 bg-slate-100 text-lg font-semibold text-slate-700 sm:h-[125px] sm:w-[125px]"
            aria-hidden="true"
          >
            {initials}
          </div>
        )
      }
    </a>
    <div class="space-y-1">
      <h3 id={titleId} class="text-2xl font-semibold leading-tight tracking-tight">{partner.data.name}</h3>
      <p class="text-xs font-semibold uppercase tracking-wide text-slate-600">{copy.category[partner.data.category]}</p>
    </div>
  </div>

  <p class="text-sm text-slate-700">{partner.data.shortDescription}</p>

  <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-700">
    {partner.data.bullets.map((bullet) => <li>{bullet}</li>)}
  </ul>

  <div class="mt-5">
    <a
      href={partner.data.website}
      target="_blank"
      rel="noopener noreferrer"
      class="btn-brand inline-flex items-center rounded-full border px-4 py-2 text-sm font-semibold transition"
    >
      {copy.officialSiteLabel}
    </a>
  </div>
</article>
