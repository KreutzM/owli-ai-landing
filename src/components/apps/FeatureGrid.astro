---
import type { SiteLang } from "../../lib/i18n";
import { getUiStrings } from "../../i18n/strings";

interface Feature {
  title: string;
  description: string;
}

interface Props {
  features: Feature[];
  lang?: SiteLang;
}

const { features, lang = "de" } = Astro.props;
const ui = getUiStrings(lang);
const safeFeatures =
  features.length > 0
    ? features
    : [{ title: ui.components.featureGrid.fallbackTitle, description: ui.components.featureGrid.fallbackDescription }];
---

<section aria-labelledby="features-heading" class="space-y-4">
  <h2 id="features-heading" class="text-2xl font-semibold tracking-tight">{ui.components.featureGrid.heading}</h2>
  <ul class="grid gap-3 sm:grid-cols-2">
    {
      safeFeatures.map((feature) => (
        <li class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
          <h3 class="text-lg font-semibold">{feature.title}</h3>
          {feature.description && <p class="mt-2 text-sm text-slate-700">{feature.description}</p>}
        </li>
      ))
    }
  </ul>
</section>
