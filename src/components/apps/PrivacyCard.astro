---
interface PrivacyInfo {
  mode: "local" | "cloud" | "hybrid";
  summary: string;
  note: string;
}

interface Props {
  privacy: PrivacyInfo;
  appSlug: string;
}

const { privacy, appSlug } = Astro.props;

const modeLabel = {
  local: "Lokal",
  cloud: "Cloud",
  hybrid: "Hybrid"
}[privacy.mode];
---

<section aria-labelledby="privacy-heading" class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
  <h2 id="privacy-heading" class="text-2xl font-semibold tracking-tight">Datenschutz</h2>
  <p class="mt-3">
    <span class="inline-flex rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase tracking-wider text-slate-700">
      Betriebsmodus: {modeLabel}
    </span>
  </p>
  <p class="mt-3 text-sm text-slate-700">{privacy.summary || "Datenschutzdetails folgen."}</p>
  {privacy.note && <p class="mt-2 text-sm text-slate-600">{privacy.note}</p>}
  <p class="mt-4 text-sm">
    <a class="underline underline-offset-2" href={`/privacy#${appSlug}`}>
      Zur Datenschutzseite
    </a>
  </p>
</section>
