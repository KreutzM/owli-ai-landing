---
import type { CollectionEntry } from "astro:content";
import { localizeHref, withPrefix, type LangPrefix, type SiteLang } from "../../lib/i18n";
import { getUiStrings } from "../../i18n/strings";

interface Props {
  app: CollectionEntry<"apps">;
  lang?: SiteLang;
  pathPrefix?: LangPrefix;
}

const { app, lang = "de", pathPrefix = "" } = Astro.props;
const ui = getUiStrings(lang);

const platformBadgeClass = "badge-platform";

const statusBadgeClass =
  app.data.status.toLowerCase() === "prototype"
    ? "badge-status-accent"
    : app.data.status.toLowerCase() === "beta"
      ? "badge-status-neutral"
      : "badge-status-accent";

const valueLine = app.data.valueProp || app.data.tagline;
const detailsHref = withPrefix(`/apps/${app.data.slug}`, pathPrefix);
const detailsLabel = ui.cta.viewDetails;
const primaryCta = app.data.links.primary
  ? { ...app.data.links.primary, href: localizeHref(app.data.links.primary.href, pathPrefix) }
  : { label: detailsLabel, href: detailsHref };
const iconSrc = app.data.icon?.src ?? `/apps/${app.data.slug}/icon-placeholder.svg`;
const iconAlt = app.data.icon?.alt?.trim() || `Icon von ${app.data.name}`;
const iconWidth = app.data.icon?.width ?? 64;
const iconHeight = app.data.icon?.height ?? 64;
---

<article class="group flex h-full flex-col rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
  <div class="mb-4 flex items-start justify-between gap-3">
    <img
      src={iconSrc}
      alt={iconAlt}
      width={iconWidth}
      height={iconHeight}
      class="h-20 w-20 rounded-xl object-contain drop-shadow-sm sm:h-[90px] sm:w-[90px]"
    />
    <div class="flex flex-wrap justify-end gap-2">
      <span class:list={["rounded-full px-3 py-1 text-xs font-semibold", platformBadgeClass]}>{app.data.platform}</span>
      <span class:list={["rounded-full px-3 py-1 text-xs font-semibold", statusBadgeClass]}>{app.data.status}</span>
    </div>
  </div>

  <h2 class="text-2xl font-semibold leading-tight tracking-tight">{app.data.name}</h2>
  <p class="mt-3 flex-1 text-sm text-slate-700">{valueLine}</p>

  <div class="mt-4">
    <a
      href={detailsHref}
      class="btn-brand inline-flex items-center gap-2 rounded-full border px-4 py-2 text-sm font-semibold transition"
    >
      {detailsLabel}
    </a>
    {primaryCta.href !== detailsHref && (
      <a
        href={primaryCta.href}
        class="btn-outline-neutral ml-2 inline-flex items-center rounded-full border px-4 py-2 text-sm font-semibold transition"
      >
        {primaryCta.label}
      </a>
    )}
  </div>
</article>
