---
interface Props {
  requirements: string[];
}

const { requirements } = Astro.props;
const items =
  requirements.length > 0
    ? requirements
    : ["Technische Anforderungen werden noch finalisiert."];
---

<section aria-labelledby="requirements-heading" class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
  <h2 id="requirements-heading" class="text-2xl font-semibold tracking-tight">Systemanforderungen</h2>
  <ul class="mt-4 list-disc space-y-2 pl-5 text-slate-700">
    {items.map((item) => <li>{item}</li>)}
  </ul>
</section>
