---
import type { SiteLang } from "../../lib/i18n";
import { getUiStrings } from "../../i18n/strings";

interface LinkDef {
  label: string;
  href: string;
}

interface Props {
  primary: LinkDef;
  secondary?: LinkDef;
  lang?: SiteLang;
}

const { primary, secondary, lang = "de" } = Astro.props;
const ui = getUiStrings(lang);
---

<section class="rounded-2xl border border-slate-200 bg-slate-900 p-5 text-white shadow-sm">
  <div class="flex flex-wrap items-center justify-between gap-3">
    <div>
      <h2 class="text-xl font-semibold tracking-tight">{ui.components.ctaBar.heading}</h2>
      <p class="text-sm text-slate-200">{ui.components.ctaBar.description}</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <a
        href={primary.href}
        class="btn-brand inline-flex items-center rounded-full border px-4 py-2 text-sm font-semibold transition"
      >
        {primary.label}
      </a>
      {secondary && (
        <a
          href={secondary.href}
          class="inline-flex items-center rounded-full border border-slate-500 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800 hover:text-white"
        >
          {secondary.label}
        </a>
      )}
    </div>
  </div>
</section>
