---
interface AppImage {
  src: string;
  alt: string;
  width?: number;
  height?: number;
}

interface Props {
  name: string;
  tagline: string;
  valueProp: string;
  audience: string;
  platform: string;
  status: string;
  icon?: AppImage;
  logo?: AppImage;
}

const { name, tagline, valueProp, audience, platform, status, icon, logo } = Astro.props;
---

<header class="relative overflow-hidden rounded-3xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8">
  <div class="absolute -right-20 -top-20 h-56 w-56 rounded-full bg-sky-100/70 blur-2xl" aria-hidden="true"></div>
  <div class="absolute -bottom-20 -left-20 h-56 w-56 rounded-full bg-emerald-100/70 blur-2xl" aria-hidden="true"></div>
  <div class="relative z-10 space-y-4">
    <div class="flex flex-wrap items-start justify-between gap-4">
      <div class="flex items-center gap-3">
        {
          icon && (
            <img
              src={icon.src}
              alt={icon.alt || `Icon von ${name}`}
              width={icon.width ?? 512}
              height={icon.height ?? 512}
              class="h-20 w-20 rounded-2xl object-contain drop-shadow-sm sm:h-24 sm:w-24"
              loading="eager"
              decoding="async"
            />
          )
        }
        <div class="flex flex-wrap gap-2 text-xs font-semibold uppercase tracking-wider text-slate-700">
          <span class="rounded-full bg-slate-100 px-3 py-1">{platform}</span>
          <span class="rounded-full bg-slate-200 px-3 py-1">{status}</span>
          <span class="rounded-full bg-slate-100 px-3 py-1">Zielgruppe: {audience}</span>
        </div>
      </div>

      {
        logo && (
          <img
            src={logo.src}
            alt={logo.alt || `${name} Logo`}
            width={logo.width ?? 1024}
            height={logo.height ?? 1024}
            class="hidden h-32 w-32 rounded object-contain lg:block xl:h-40 xl:w-40"
            loading="eager"
            decoding="async"
          />
        )
      }
    </div>

    <h1 class="max-w-4xl text-4xl font-semibold leading-tight tracking-tight sm:text-5xl">{name}</h1>
    <p class="max-w-4xl text-lg font-medium text-slate-800">{valueProp}</p>
    <p class="max-w-3xl text-slate-700">{tagline}</p>
  </div>
</header>
