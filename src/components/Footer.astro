---
import BrandLogo from "./BrandLogo.astro";
import { withPrefix, type LangPrefix } from "../lib/i18n";

interface Props {
  pathPrefix?: LangPrefix;
}

const { pathPrefix = "" } = Astro.props;
---

<footer class="border-t border-slate-200 bg-white">
  <div class="mx-auto flex max-w-6xl flex-col gap-4 px-4 py-6 text-sm text-slate-700 sm:px-6 lg:px-8">
    <div class="flex items-center gap-3">
      <BrandLogo alt="Owli-AI Logo" width={32} height={32} className="h-8 w-8 rounded object-contain" />
      <p>Owli-AI entwickelt Assistenz-Apps fuer Android und Windows.</p>
    </div>
    <nav aria-label="Footer Navigation">
      <ul class="flex flex-wrap gap-4">
        <li><a class="underline-offset-2 hover:underline" href={withPrefix("/apps", pathPrefix)}>Apps</a></li>
        <li><a class="underline-offset-2 hover:underline" href={withPrefix("/support", pathPrefix)}>Support</a></li>
        <li><a class="underline-offset-2 hover:underline" href={withPrefix("/privacy", pathPrefix)}>Datenschutz</a></li>
        <li><a class="underline-offset-2 hover:underline" href={withPrefix("/imprint", pathPrefix)}>Impressum</a></li>
        <li><a class="underline-offset-2 hover:underline" href={withPrefix("/accessibility", pathPrefix)}>Barrierefreiheit</a></li>
      </ul>
    </nav>
  </div>
</footer>
