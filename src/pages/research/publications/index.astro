---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { getPublications } from "../../../lib/content";
import { withPrefix, type LangPrefix, type SiteLang } from "../../../lib/i18n";
import { formatUiString, getUiStrings } from "../../../i18n/strings";

interface Props {
  lang?: SiteLang;
  pathPrefix?: LangPrefix;
}

const { lang = "de", pathPrefix = "" } = Astro.props;
const href = (path: string) => withPrefix(path, pathPrefix);
const ui = getUiStrings(lang);

const publications = await getPublications(lang);
---

<BaseLayout
  title={ui.pages.researchPublications.seoTitle}
  description={ui.pages.researchPublications.seoDescription}
  keywords={["Owli-AI", "Forschung", "Publikationen", "AHRUS", "HCII"]}
  lang={lang}
  pathPrefix={pathPrefix}
>
  <section class="space-y-8">
    <header class="max-w-4xl space-y-3">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-600">{ui.pages.researchPublications.headerEyebrow}</p>
      <h1 class="text-4xl font-semibold leading-tight tracking-tight sm:text-5xl">{ui.pages.researchPublications.headerTitle}</h1>
      <p class="text-lg text-slate-700">{ui.pages.researchPublications.headerBody}</p>
      <p class="text-sm text-slate-600">
        {formatUiString(ui.pages.researchPublications.countLine, { count: publications.length })}
      </p>
    </header>

    <ol class="grid gap-4">
      {
        publications.map((publication) => (
          <li class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <h2 class="text-2xl font-semibold tracking-tight">
              <a class="underline-offset-2 hover:underline" href={href(`/research/publications/${publication.data.slug}`)}>
                {publication.data.title}
              </a>
            </h2>
            <p class="mt-2 text-sm text-slate-700">
              {publication.data.venue} ({publication.data.year}) - {publication.data.type}
            </p>
            <p class="mt-1 text-sm text-slate-700">{publication.data.authors.join("; ")}</p>
            <p class="mt-3 text-sm text-slate-700">{publication.data.abstract}</p>
            <div class="mt-4 flex flex-wrap gap-2" aria-label="Keywords">
              {
                publication.data.keywords.map((keyword) => (
                  <span class="badge-platform rounded-full px-3 py-1 text-xs font-semibold">{keyword}</span>
                ))
              }
            </div>
            {publication.data.relatedProjectSlug && (
              <p class="mt-4 text-sm text-slate-700">
                {ui.pages.researchPublications.relatedProjectLabel}:{" "}
                <a class="font-semibold underline underline-offset-2" href={href(`/research/projects/${publication.data.relatedProjectSlug}`)}>
                  /research/projects/{publication.data.relatedProjectSlug}
                </a>
              </p>
            )}
          </li>
        ))
      }
    </ol>
  </section>
</BaseLayout>
