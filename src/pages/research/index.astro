---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getProjects, getPublications } from "../../lib/content";
import { withPrefix, type LangPrefix, type SiteLang } from "../../lib/i18n";
import { formatUiString, getUiStrings } from "../../i18n/strings";

interface Props {
  lang?: SiteLang;
  pathPrefix?: LangPrefix;
}

const { lang = "de", pathPrefix = "" } = Astro.props;
const href = (path: string) => withPrefix(path, pathPrefix);
const ui = getUiStrings(lang);

const projects = await getProjects(lang);
const publications = await getPublications(lang);
---

<BaseLayout
  title={ui.pages.research.seoTitle}
  description={ui.pages.research.seoDescription}
  keywords={["Owli-AI Forschung", "Assistive Technologie", "Publikationen", "Projekte"]}
  lang={lang}
  pathPrefix={pathPrefix}
>
  <section class="space-y-8">
    <header class="max-w-4xl space-y-3">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-600">{ui.pages.research.headerEyebrow}</p>
      <h1 class="text-4xl font-semibold leading-tight tracking-tight sm:text-5xl">{ui.pages.research.headerTitle}</h1>
      <p class="text-lg text-slate-700">
        {ui.pages.research.headerBody}
      </p>
    </header>

    <section class="space-y-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8" aria-labelledby="projects-title">
      <div class="flex flex-wrap items-end justify-between gap-3">
        <h2 id="projects-title" class="text-2xl font-semibold tracking-tight">{ui.pages.research.projectsHeading}</h2>
        <a class="text-sm font-semibold underline underline-offset-2" href={href("/research/projects")}>
          {ui.cta.viewAllProjects}
        </a>
      </div>

      {projects.length === 0 ? (
        <p class="text-slate-700">{ui.pages.research.projectsEmpty}</p>
      ) : (
        <ol class="grid gap-4 sm:grid-cols-2">
          {
            projects.map((project) => (
              <li class="rounded-xl border border-slate-200 bg-slate-50 p-4">
                <h3 class="text-xl font-semibold tracking-tight">
                  <a class="underline-offset-2 hover:underline" href={href(`/research/projects/${project.data.slug}`)}>
                    {project.data.title}
                  </a>
                </h3>
                <p class="mt-2 text-sm text-slate-700">{project.data.shortDescription}</p>
                <p class="mt-3 text-xs font-semibold uppercase tracking-wide text-slate-600">{project.data.status}</p>
              </li>
            ))
          }
        </ol>
      )}
    </section>

    <section class="space-y-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8" aria-labelledby="publications-title">
      <div class="flex flex-wrap items-end justify-between gap-3">
        <h2 id="publications-title" class="text-2xl font-semibold tracking-tight">{ui.pages.research.publicationsHeading}</h2>
        <a class="text-sm font-semibold underline underline-offset-2" href={href("/research/publications")}>
          {ui.cta.viewAllPublications}
        </a>
      </div>
      <p class="text-slate-700">
        {formatUiString(ui.pages.research.publicationsCount, { count: publications.length })}
      </p>

      <ol class="grid gap-4">
        {
          publications.map((publication) => (
            <li class="rounded-xl border border-slate-200 bg-slate-50 p-4">
              <h3 class="text-xl font-semibold tracking-tight">
                <a class="underline-offset-2 hover:underline" href={href(`/research/publications/${publication.data.slug}`)}>
                  {publication.data.title}
                </a>
              </h3>
              <p class="mt-1 text-sm text-slate-700">
                {publication.data.venue} ({publication.data.year}) - {publication.data.type}
              </p>
              <p class="mt-2 text-sm text-slate-700">{publication.data.authors.join("; ")}</p>
            </li>
          ))
        }
      </ol>
    </section>
  </section>
</BaseLayout>
