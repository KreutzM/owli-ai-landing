      <p class="text-slate-700">
        Michael Kreutzer
        <br />
        Schnepfenhain 29, 36304 Alsfeld, Deutschland
      </p>
    </section>

    <section class="space-y-2">
      <h2 class="text-xl font-semibold">Kontakt</h2>
      <p class="text-slate-700">
        <a class="underline" href="mailto:Michael.Kreutzer.77@gmail.com">Michael.Kreutzer.77@gmail.com</a>
      </p>
