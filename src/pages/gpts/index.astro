---
import BaseLayout from "../../layouts/BaseLayout.astro";
import GptCard from "../../components/gpts/GptCard.astro";
import { getGpts } from "../../lib/content";
import { type LangPrefix, type SiteLang } from "../../lib/i18n";
import { formatUiString, getUiStrings } from "../../i18n/strings";

interface Props {
  lang?: SiteLang;
  pathPrefix?: LangPrefix;
}

const { lang = "de", pathPrefix = "" } = Astro.props;
const gpts = await getGpts(lang);
const ui = getUiStrings(lang);
---

<BaseLayout
  title={ui.pages.gpts.seoTitle}
  description={ui.pages.gpts.seoDescription}
  keywords={["Custom GPT", "ChatGPT", "Sozialberater Hessen", "SeeForMe", "Technische Informatik Tutor"]}
  lang={lang}
  pathPrefix={pathPrefix}
>
  <section class="space-y-8">
    <header class="max-w-4xl space-y-3">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-600">{ui.pages.gpts.headerEyebrow}</p>
      <h1 class="text-4xl font-semibold leading-tight tracking-tight sm:text-5xl">{ui.pages.gpts.headerTitle}</h1>
      <p class="text-lg text-slate-700">
        {ui.pages.gpts.headerBodyPrimary}
      </p>
      <p class="text-base text-slate-700">
        {ui.pages.gpts.headerBodySecondary}
      </p>
    </header>

    <p class="text-sm text-slate-600">
      {formatUiString(ui.pages.gpts.countLine, { count: gpts.length })}
    </p>
    <p class="text-sm text-slate-600">
      {ui.notices.requiresChatGptAccount}
    </p>

    <ol class="grid gap-4 sm:grid-cols-2 xl:grid-cols-3">
      {
        gpts.map((gpt) => (
          <li>
            <GptCard gpt={gpt} lang={lang} pathPrefix={pathPrefix} />
          </li>
        ))
      }
    </ol>
  </section>
</BaseLayout>
