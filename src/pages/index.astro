---
import BaseLayout from "../layouts/BaseLayout.astro";
import BrandLogo from "../components/BrandLogo.astro";
import GptCard from "../components/gpts/GptCard.astro";
import { render } from "astro:content";
import { getApps, getGpts, getSiteBySlug } from "../lib/content";
import { withPrefix, type LangPrefix, type SiteLang } from "../lib/i18n";
import { getUiStrings } from "../i18n/strings";

interface Props {
  lang?: SiteLang;
  pathPrefix?: LangPrefix;
}

const { lang = "de", pathPrefix = "" } = Astro.props;
const href = (path: string) => withPrefix(path, pathPrefix);
const ui = getUiStrings(lang);

const apps = await getApps(lang);
const gpts = (await getGpts(lang)).slice(0, 3);
const homeEntry = await getSiteBySlug("home", lang);
const HomeContent = homeEntry ? (await render(homeEntry)).Content : null;
---

<BaseLayout
  title={ui.pages.home.seoTitle}
  description={ui.pages.home.seoDescription}
  keywords={["Assistenz Apps", "Sehbeeintraechtigung", "Hoerbeeintraechtigung", "Bildbeschreibung App", "Lupe App Android", "Live Transkription", "Desktop Vergroesserung"]}
  lang={lang}
  pathPrefix={pathPrefix}
>
  <section class="space-y-10">
    <section class="relative overflow-hidden rounded-3xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8" aria-labelledby="brand-hero-title">
      <div class="absolute -right-20 -top-16 h-56 w-56 rounded-full bg-sky-100/70 blur-2xl" aria-hidden="true"></div>
      <div class="absolute -bottom-24 -left-16 h-56 w-56 rounded-full bg-emerald-100/70 blur-2xl" aria-hidden="true"></div>

      <div class="relative z-10 grid items-center gap-8 lg:grid-cols-[1.25fr,0.95fr]">
        <div class="space-y-4">
          <p class="text-xs font-semibold uppercase tracking-[0.22em] text-slate-600">{ui.pages.home.heroEyebrow}</p>
          <h1 id="brand-hero-title" class="text-4xl font-semibold leading-tight tracking-tight sm:text-5xl">
            {ui.pages.home.heroTitle}
          </h1>
          <div class="max-w-3xl space-y-2 text-lg text-slate-700">
            <p>
              {ui.pages.home.heroBodyPrimary}
            </p>
            <p>
              {ui.pages.home.heroBodySecondary}
            </p>
          </div>
          <div class="flex flex-wrap gap-3">
            <a
              href={href("/apps")}
              class="btn-brand inline-flex items-center rounded-full border px-5 py-2.5 text-sm font-semibold transition"
            >
              {ui.cta.discoverApps}
            </a>
            <a
              href={href("/apps/way-buddy")}
              class="btn-outline-neutral inline-flex items-center rounded-full border px-5 py-2.5 text-sm font-semibold transition"
            >
              {ui.pages.home.wayBuddyCta}
            </a>
          </div>
        </div>

        <aside class="rounded-2xl border border-slate-200 bg-slate-50/80 p-6">
          <div class="flex flex-col items-center gap-4 text-center">
            <BrandLogo
              alt="Owli-AI Markenlogo"
              width={512}
              height={512}
              className="h-[220px] w-[220px] rounded-3xl object-contain drop-shadow-sm sm:h-[240px] sm:w-[240px]"
              priority={true}
            />
            <div class="space-y-1.5">
              <p class="text-xs font-semibold uppercase tracking-wider text-slate-600">{ui.pages.home.suiteLabel}</p>
              <p class="text-sm font-semibold text-slate-900">Owli-AI</p>
              <p class="text-sm text-slate-700">{ui.pages.home.suiteCaption}</p>
            </div>
          </div>
        </aside>
      </div>
    </section>

    <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8" aria-label="Ueberblick">
      {HomeContent ? <div class="content-markdown"><HomeContent /></div> : <p>{ui.pages.home.overviewFallback}</p>}
    </section>

    <section aria-labelledby="gpts-teaser-title" class="space-y-4">
      <div class="flex flex-wrap items-end justify-between gap-3">
        <h2 id="gpts-teaser-title" class="text-3xl font-semibold tracking-tight">{ui.pages.home.gptsTitle}</h2>
        <a class="text-sm font-semibold underline underline-offset-2" href={href("/gpts")}>
          {ui.cta.viewAllGpts}
        </a>
      </div>
      <p class="text-base text-slate-700">
        {ui.pages.home.gptsBody}
      </p>
      <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          gpts.map((gpt) => (
            <li>
              <GptCard gpt={gpt} compact={true} lang={lang} pathPrefix={pathPrefix} />
            </li>
          ))
        }
      </ul>
    </section>

    <section aria-labelledby="apps-overview-title" class="space-y-4">
      <div class="flex flex-wrap items-end justify-between gap-3">
        <h2 id="apps-overview-title" class="text-3xl font-semibold tracking-tight">{ui.pages.home.appsOverviewTitle}</h2>
        <a class="text-sm font-semibold underline underline-offset-2" href={href("/apps")}>
          {ui.pages.home.appsOverviewLink}
        </a>
      </div>
      <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          apps.map((app) => {
            const iconSrc = app.data.icon?.src ?? `/apps/${app.data.slug}/icon-placeholder.svg`;
            const iconAlt = app.data.icon?.alt?.trim() || `Icon von ${app.data.name}`;
            const statusBadgeClass =
              app.data.status.toLowerCase() === "prototype"
                ? "badge-status-accent"
                : app.data.status.toLowerCase() === "beta"
                  ? "badge-status-neutral"
                  : "badge-status-accent";

            return (
              <li class="flex h-full flex-col rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
                <div class="mb-3 flex items-center justify-between gap-2">
                  <img
                    src={iconSrc}
                    alt={iconAlt}
                    width={app.data.icon?.width ?? 64}
                    height={app.data.icon?.height ?? 64}
                    class="h-20 w-20 rounded-xl object-contain drop-shadow-sm sm:h-[90px] sm:w-[90px]"
                    loading="lazy"
                    decoding="async"
                  />
                  <div class="flex flex-wrap justify-end gap-1.5">
                    <span class="badge-platform rounded-full px-2.5 py-1 text-xs font-semibold">{app.data.platform}</span>
                    <span class:list={["rounded-full px-2.5 py-1 text-xs font-semibold", statusBadgeClass]}>{app.data.status}</span>
                  </div>
                </div>

                <h3 class="text-xl font-semibold leading-tight tracking-tight">
                  <a class="underline-offset-2 hover:underline" href={href(`/apps/${app.data.slug}`)}>
                    {app.data.name}
                  </a>
                </h3>
                <p class="mt-2 flex-1 text-sm text-slate-700">{app.data.valueProp || app.data.tagline}</p>

                <div class="mt-4">
                  <a
                    href={href(`/apps/${app.data.slug}`)}
                    class="btn-brand inline-flex items-center rounded-full border px-4 py-2 text-sm font-semibold transition"
                  >
                    {ui.cta.viewDetails}
                  </a>
                </div>
              </li>
            );
          })
        }
      </ul>
    </section>
  </section>
</BaseLayout>
