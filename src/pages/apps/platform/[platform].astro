---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import AppCard from "../../../components/apps/AppCard.astro";
import PlatformFilterNav from "../../../components/apps/PlatformFilterNav.astro";
import { filterAppsByPlatform, getApps, type PlatformFilter } from "../../../lib/content";

export async function getStaticPaths() {
  return [{ params: { platform: "android" } }, { params: { platform: "windows" } }];
}

interface Props {
  platform: Exclude<PlatformFilter, "all">;
}

const { platform } = Astro.props;
const apps = filterAppsByPlatform(await getApps(), platform);
const platformTitle = platform === "android" ? "Android" : "Windows";
---

<BaseLayout title={`Apps - ${platformTitle}`} description={`Owli-AI Apps fuer ${platformTitle}.`}>
  <section class="space-y-8">
    <header class="max-w-4xl space-y-3">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-600">Plattformfilter</p>
      <h1 class="text-4xl font-semibold leading-tight tracking-tight sm:text-5xl">Apps fuer {platformTitle}</h1>
      <p class="text-lg text-slate-700">Filteransicht ohne JavaScript. Jede Karte fuehrt direkt zur Detailseite.</p>
    </header>

    <PlatformFilterNav active={platform} />

    {apps.length === 0 ? (
      <p class="rounded-2xl border border-slate-200 bg-white p-5 text-slate-700 shadow-sm">Keine Apps fuer diese Plattform gefunden.</p>
    ) : (
      <ol class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          apps.map((app) => (
            <li>
              <AppCard app={app} />
            </li>
          ))
        }
      </ol>
    )}
  </section>
</BaseLayout>
