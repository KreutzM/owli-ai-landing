---
import BaseLayout from "../layouts/BaseLayout.astro";
import { type LangPrefix, type SiteLang } from "../lib/i18n";
import { getUiStrings } from "../i18n/strings";

interface Props {
  lang?: SiteLang;
  pathPrefix?: LangPrefix;
}

const { lang = "de", pathPrefix = "" } = Astro.props;
const ui = getUiStrings(lang);
---

<BaseLayout title={ui.pages.accessibility.seoTitle} description={ui.pages.accessibility.seoDescription} lang={lang} pathPrefix={pathPrefix}>
  <section class="space-y-4 rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
    <h1 class="text-3xl font-semibold">{ui.pages.accessibility.title}</h1>
    <p class="text-slate-700">
      {ui.pages.accessibility.intro}
    </p>
    <h2 class="text-xl font-semibold">{ui.pages.accessibility.statusTitle}</h2>
    <ul class="list-disc space-y-2 pl-5 text-slate-700">
      <li>{ui.pages.accessibility.bullet1}</li>
      <li>{ui.pages.accessibility.bullet2}</li>
      <li>{ui.pages.accessibility.bullet3}</li>
      <li>{ui.pages.accessibility.bullet4}</li>
    </ul>
    <p class="text-slate-700">
      {ui.pages.accessibility.feedbackLabel}: <a class="underline" href="mailto:contact@owli-ai.com">contact@owli-ai.com</a>
    </p>
  </section>
</BaseLayout>
